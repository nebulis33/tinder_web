<% if @conversations.size > 0 %>
    <% @conversations.each do |conversation| %>
        <% convo_account = (conversation.sender_id == current_account.id ? conversation.recipient_id : conversation.sender_id) %>
        <% account = Account.find_by(id: convo_account) %>
        <%= profile_thumbnail account %>
        <%= account.first_name %>
        <%= conversation.messages.last %>
    <% end %>
<% else %>
    <p>No messages yet.  Try again soon!</p>
<% end %>