

<div class="col-9 col-md-8">
    <ul id="slides">
        <% @users.each_with_index do |user, index| %>

            <div class="slide <%= 'showing' if index == 0 %>" data-id="<%= user.id %>">
                <% num_of_pics = user.images.count %>
                <% if num_of_pics < 2 %>
                    <img class="d-block pimage" src="<%= url_for user.images.first %>" >
                <% else %>

                    <div id="carouselExampleIndicators" class="carousel" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <% (0...num_of_pics).each do |i| %>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" class="<%= "active" if i == 0%>"></li>
                                <% end %>
                            </ol>
                            <div class="carousel-inner">
                                <% (0...num_of_pics).each do |i| %>
                                    <div class="carousel-item <%= "active" if i == 0%>">
                                    <img class="d-block pimage" src="<%= url_for user.images[i] %>" >
                                    </div>
                                <% end %>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                    </div>
                <% end %>
                
                <div class='user-details'>
                    <span class="user-name"><%= user.first_name %></span>, 31<br>
                    <i class="fa fa-graduation-cap mr-1"></i><%= user.education %><br>
                    <i class="fa fa-map-marker mr-3"></i><%= user.location %><br>
                </div>
            </div>
        <% end %>
    </ul>

    <div id="slide-controls">
        <div id="decline" class="d-inline-block fa-stack fa-2x">
        <i class="fa fa-circle fa-stack-2x text-white"></i>
        <i class="fa fa-times fa-stack-1x text-danger"></i>
        </div>

        <div id="approve" class="d-inline-block fa-stack fa-2x">
        <i class="fa fa-circle fa-stack-2x text-white"></i>
        <i class="fa fa-heart fa-stack-1x text-success"></i>
        </div>
    </div>
        <div id="conversation">
        </div>
</div>



