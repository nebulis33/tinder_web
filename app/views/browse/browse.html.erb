<div class="container">
    <div class="row">
        <div class="col-3 col-md-4">
        <%= render 'layouts/profile_bar' %>
        
            <ul class="nav nav-tinder-sidebar mb-3" id="pills-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="pills-matches-tab" data-toggle="pill" href="#pills-matches" role="tab" aria-controls="pills-matches" aria-selected="true">Matches</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-messages-tab" data-toggle="pill" href="#pills-messages" role="tab" aria-controls="pills-messages" aria-selected="false">Messages</a>
                </li>
            </ul>
            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade show active" id="pills-matches" role="tabpanel" aria-labelledby="pills-matches-tab">
                    <%= render "browse/matches" %>
                </div>
                <div class="tab-pane fade" id="pills-messages" role="tabpanel" aria-labelledby="pills-messages-tab">
                    <div class="col">
                    <p>No Matches right now, check back later.</p>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-9 col-md-8">
            <ul id="slides">
                <% @users.each_with_index do |user, index| %>
                <div class="slide <%= 'showing' if index == 0 %>" data-id="<%= user.id %>">
                    <% if user.images.first %>
                        <div class="image-carousel" style="background-image: url('<%= url_for user.images.first %>')">
                        
                        </div>
                        <%#= image_tag user.images.first, width: '200px' %>
                    <% end %>
                    <div class='user-details'>
                        <span class="user-name"><%= user.first_name %></span>, 31<br>
                        <i class="fa fa-graduation-cap mr-1"></i>Job / University<br>
                        <i class="fa fa-map-marker mr-3"></i>Location<br>
                    </div>
                </div>
                <% end %>
            </ul>

            <div id="slide-controls">
                <span id="decline"><i class="fa fa-times fa-2x"></i></span>
                <span id="approve"><i class="fa fa-heart fa-2x"></i></span>
            </div>
                <div id="conversation">
                </div>
        </div>
    </div>
</div>

