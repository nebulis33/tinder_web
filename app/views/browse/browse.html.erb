<ul id="slides">
    <% @users.each_with_index do |user, index| %>
    <div class="slide <%= 'showing' if index == 0 %>" data-id="<%= user.id %>">
        <% if user.images.first %>
            <div class="image-carousel" style="background-image: url('<%= url_for user.images.first %>')">
            
            </div>
            <%#= image_tag user.images.first, width: '200px' %>
        <% end %>
        <div class='user-details'>
            <span class="user-name"><%= user.first_name %></span>, 31<br>
            <i class="fa fa-graduation-cap mr-1"></i>Job / University<br>
            <i class="fa fa-map-marker mr-3"></i>Location<br>
        </div>
    </div>
    <% end %>
</ul>

<div id="slide-controls">
<span id="decline"><i class="fa fa-times fa-2x"></i></span>
<span id="approve"><i class="fa fa-heart fa-2x"></i></span>
</div>